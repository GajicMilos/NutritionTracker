<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/seePlanTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:text="Your plan"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/planMondayTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monday:"
        android:textSize="16dp"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintEnd_toEndOf="@+id/seePlanTv"
        app:layout_constraintStart_toStartOf="@+id/seePlanTv"
        app:layout_constraintTop_toBottomOf="@+id/seePlanTv" />

    <TextView
        android:id="@+id/textView69"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:text="Send to email:"
        app:layout_constraintEnd_toEndOf="@+id/planMondayTv"
        app:layout_constraintStart_toStartOf="@+id/planMondayTv"
        app:layout_constraintTop_toBottomOf="@+id/planMondayTv" />

    <EditText
        android:id="@+id/emailToSendToEt"
        android:layout_width="239dp"
        android:layout_height="69dp"
        android:layout_marginVertical="15dp"
        android:ems="10"
        android:hint="Enter email"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/textView69"
        app:layout_constraintStart_toStartOf="@+id/textView69"
        app:layout_constraintTop_toBottomOf="@+id/textView69" />

    <Button
        android:id="@+id/sendPlanButton"
        android:layout_width="wrap_content"
        android:layout_marginVertical="15dp"
        android:layout_height="wrap_content"
        android:text="Send plan"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/emailToSendToEt"
        app:layout_constraintStart_toStartOf="@+id/emailToSendToEt"
        app:layout_constraintTop_toBottomOf="@+id/emailToSendToEt" />

</androidx.constraintlayout.widget.ConstraintLayout>