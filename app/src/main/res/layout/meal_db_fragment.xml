<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="72dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/scvMealDb"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="15dp"
            android:orientation="vertical"

            >

            <TextView
                android:id="@+id/tvIngredientsValDB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:text="ingredientsVal"
                app:layout_constraintEnd_toEndOf="@+id/mealDBImageView"

                app:layout_constraintStart_toStartOf="@+id/mealDBImageView"
                app:layout_constraintTop_toBottomOf="@+id/textView12" />

            <TextView
                android:id="@+id/tvLinkDB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:autoLink="web"
                android:text="link"
                app:layout_constraintEnd_toEndOf="@+id/mealDBImageView"
                app:layout_constraintStart_toStartOf="@+id/mealDBImageView"
                app:layout_constraintTop_toBottomOf="@+id/tvIngredientsValDB" />

            <ImageView
                android:id="@+id/mealDBImageView"
                android:layout_width="234dp"
                android:layout_height="208dp"
                android:layout_marginTop="44dp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/eventico" />

            <TextView
                android:id="@+id/tvTagsDB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:text="tags"
                app:layout_constraintEnd_toEndOf="@+id/mealDBImageView"
                app:layout_constraintStart_toStartOf="@+id/mealDBImageView"
                app:layout_constraintTop_toBottomOf="@+id/tvMealNameDB" />


            <TextView
                android:id="@+id/tvMealAreaDB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:text="MealArea"
                app:layout_constraintEnd_toEndOf="@+id/mealDBImageView"
                app:layout_constraintStart_toStartOf="@+id/mealDBImageView"
                app:layout_constraintTop_toBottomOf="@+id/tvMealCategoryDB" />

            <TextView
                android:id="@+id/tvMealCategoryDB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginTop="8dp"
                android:text="MealCategory"
                app:layout_constraintEnd_toEndOf="@+id/mealDBImageView"

                app:layout_constraintStart_toStartOf="@+id/mealDBImageView"
                app:layout_constraintTop_toBottomOf="@+id/tvTagsDB" />

            <TextView
                android:id="@+id/tvMealNameDB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginTop="20dp"
                android:text="MealName"
                app:layout_constraintEnd_toEndOf="@+id/mealDBImageView"
                app:layout_constraintStart_toStartOf="@+id/mealDBImageView"
                app:layout_constraintTop_toBottomOf="@+id/mealDBImageView" />

            <TextView
                android:id="@+id/tvInstructionsDB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="Instructions:"

                app:layout_constraintEnd_toEndOf="@+id/mealDBImageView"
                app:layout_constraintStart_toStartOf="@+id/mealDBImageView"
                app:layout_constraintTop_toBottomOf="@+id/textView13" />

            <Button
                android:id="@+id/deleteMealDbButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="72dp"
                android:layout_marginVertical="15dp"
                android:text="delete"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvInstructionsDB"
                app:layout_constraintVertical_bias="1.0" />

            <Button
                android:id="@+id/updateMealDbButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="72dp"
                android:layout_marginVertical="15dp"
                android:text="update"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvInstructionsDB"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tags:"
                app:layout_constraintBottom_toBottomOf="@+id/tvTagsDB"
                app:layout_constraintStart_toStartOf="@+id/mealDBImageView"
                app:layout_constraintTop_toTopOf="@+id/tvTagsDB"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Category"
                app:layout_constraintBottom_toBottomOf="@+id/tvMealCategoryDB"
                app:layout_constraintStart_toStartOf="@+id/textView7"
                app:layout_constraintTop_toTopOf="@+id/tvMealCategoryDB"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Area:"
                app:layout_constraintBottom_toBottomOf="@+id/tvMealAreaDB"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/textView9"
                app:layout_constraintTop_toTopOf="@+id/tvMealAreaDB"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Ingredients"
                app:layout_constraintEnd_toEndOf="@+id/tvIngredientsValDB"
                app:layout_constraintStart_toStartOf="@+id/tvIngredientsValDB"
                app:layout_constraintTop_toBottomOf="@+id/tvMealAreaDB" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:text="Instructions:"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvLinkDB" />



        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>
    <ProgressBar
        android:id="@+id/progressBarMealDb"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        />

</FrameLayout>